---
import { Title, Text } from "src/ui/text";
import { Button } from "../ui/Button/Button";
import { Header } from "src/components/Header/Header";
import { Hero } from "src/components/Hero/Hero";
import { Skill } from "src/ui/Skill-Button";
import { AboutMe } from "src/components/About-Me/About-Me";
import { Proyect } from "src/components/Proyects/Proyect";
import { Contact} from "src/components/Contact/Contact";
import { Footer } from "src/components/Footer/Footer"
import "../public/css/index.css"
import "../public/css/hover.css"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Astro</title>
  </head>
  <body>
    <header class="header">
      <Header client:only/>
      <Hero client:only/>
    </header>
    <main class="main">
      <AboutMe />
      <Proyect />
      <Contact/>
      <Footer/>
    </main>
  </body>
</html>
<style>
  
  html, body{
    scroll-behavior: smooth;
  }
  html::-webkit-scrollbar {
    display: none;  /* Ocultar scroll */
}

  .header {
    width: 100%;
    height: 100vh;
  }
  .main {
    width: 100%;
    overflow-x: hidden;
  }
</style>
